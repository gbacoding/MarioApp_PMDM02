<?xml version="1.0" encoding="utf-8"?>

<resources>
    <!-- Estilos para recyclerview_MainActivity_row_model-->

        <!-- Estilos para Card view-->
        <style name="HoloCornerCardView_RecyclerViewRow_Style">
            <item name="android:layout_width">wrap_content</item>
            <item name="android:layout_height">wrap_content</item>
            <item name="cardBackgroundColor">@android:color/holo_orange_light</item>
            <item name="cardCornerRadius">80dp</item>
            <item name="cardElevation">15dp</item>
            <item name="android:layout_marginStart">16dp</item>
            <item name="android:layout_marginEnd">16dp</item>
            <item name="android:layout_marginTop">16dp</item>
            <item name="android:layout_marginBottom">16dp</item>
        </style>

        <!-- Estilos para ImageView Imagen del personaje -->
        <style name="CharacterImage_RecyclerViewRow_Style">
            <item name="android:layout_width">300dp</item>
            <item name="android:layout_height">300dp</item>
            <item name="android:paddingTop">30dp</item>
        </style>

       <!-- Estilos para TextView Nombre del personaje -->
        <style name="CharacterTextName_RecyclerViewRow_Style">
            <item name="android:layout_width">wrap_content</item>
            <item name="android:layout_height">wrap_content</item>
            <item name="android:fontFamily">@font/super_mario64</item>
            <item name="android:textColor">#621E1E</item>
            <item name="android:textSize">60sp</item>
            <item name="android:textStyle">bold</item>
        </style>

    <!-- Estilos para la Actividad de Detalles -->

        <!-- Estilo para el botón de retroceso -->
        <style name="BackButtonStyle">
            <item name="android:layout_width">48dp</item>
            <item name="android:layout_height">48dp</item>
            <item name="android:layout_margin">16dp</item>
            <item name="android:background">@drawable/arrow_back</item> <!-- Fondo con el drawable de flecha -->
            <item name="android:contentDescription">@string/back_button_description</item> <!-- Descripción accesible -->
        </style>

        <!-- Estilo Nombre del personaje -->
        <style name="CharacterTextName_DetailsActivity_Style">
            <item name="android:layout_width">wrap_content</item>
            <item name="android:layout_height">wrap_content</item>
            <item name="android:fontFamily">@font/super_mario64</item>
            <item name="android:textColor">#C81511</item>
            <item name="android:textSize">55sp</item>
            <item name="android:textStyle">bold</item>
            <item name="android:layout_marginTop">16dp</item>
        </style>

        <!-- Estilos Descripcion del personaje -->
        <style name="CharacterDescription_DetailsActivity_Style">
            <item name="android:layout_width">match_parent</item>
            <item name="android:layout_height">wrap_content</item>
            <item name="android:textColor">#4CAF50</item>
            <item name="android:textSize">18sp</item>
            <item name="android:textStyle">bold|italic</item>
            <item name="android:layout_marginTop">16dp</item>
            <item name="android:layout_marginStart">30dp</item>
            <item name="android:layout_marginEnd">10dp</item>
        </style>

    <!-- Estilos habilidaddes del personaje -->
        <style name="CharacterSkills_DetailsActivity_Style">
            <item name="android:layout_width">wrap_content</item>
            <item name="android:layout_height">wrap_content</item>
            <item name="android:textColor">#FFEB3B</item>
            <item name="android:textSize">16sp</item>
            <item name="android:textStyle">bold</item>
            <item name="android:layout_marginTop">35dp</item>
        </style>


</resources>